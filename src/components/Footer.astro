<style>
    .upper {
        display: flex;
        justify-content: space-evenly;
        background: var(--cph-blue);
        padding: 60px 20px 40px;
    }
    .lists {
        display: flex;
    }
    .upper ul {
        display: flex;
        flex-direction: column;
        gap: 20px;
        width: 228px;
        color: var(--cph-white);
        font-size: var(--fs-small);
    }
    .ads {
        padding-top: 32px;
    }
    .app {
        display: flex;
        background: var(--footer-blue);
        min-width: max-content;
        border-radius: 10px;
        padding: 15px 25px 0 5px;
        margin-block: 35px 70px;


        & > img {
            margin-top: -50px;
        }
        & p {
            font-size: var(--fs-smaller);
            font-weight: var(--fw-bold);
            color: var(--cph-white);
            margin-bottom: 14px;
        }
        & .getapps img {
            height: 36px;
            margin-bottom: 8px;
        }
    }

    .socials {
        display: flex;
        justify-content: space-between;

        & img {
            width: auto;
            height: 32px;
            filter: brightness(0) invert(1);
        }
    }
    .lower {
        padding: 32px 40px;
        display: flex;
        justify-content: space-between;
        background: var(--footer-blue);
        color: var(--cph-white);
        font-size: var(--fs-smaller);

        & > div {
            display: grid;
            gap: 8px;
        }

        & ul {
        display: flex;
        gap: 12px;
        }
        & img {
            height: 60px;
        }
    }

</style>