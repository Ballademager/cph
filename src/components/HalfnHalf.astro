---
import { Image } from "astro:assets";
const { cardIcon, cardTitle, cardDescription, targetLocation } = Astro.props;
import logo from "../images/logo.webp";
---

<a href={targetLocation}>
  <div
    class="flex shadow-xl justify-center items-stretch rounded-2xl overflow-hidden"
  >
    <div class="p-10 bg-cph-blue flex-1 flex justify-center items-center">
      <Image src={logo} alt="" />
    </div>
    <div class="p-10 flex-1 flex flex-col gap-2 items-center">
      <!-- Temporary image until we import all images needed -->
      <p class="font-bold text-6 text-center text-cph-blue">{cardTitle}</p>
      <p class="text-small font-medium text-center">{cardDescription}</p>

      <button
        class="mt-2 bg-cph-blue rounded-md text-cph-white w-fit px-4 py-2 text-small font-medium"
        >Learn More</button
      >
    </div>
  </div>
</a>
