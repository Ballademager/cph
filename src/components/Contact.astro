---
import clock from "../images/clock.svg";
import email from "../images/email.svg";
import at from "../images/at.svg"
import phone from "../images/phone.svg"
---

<div class="contact-box">
<h3>Kontakt os</h3>
<div class="opening-hours">
    <img src={clock.src} alt="">
    <div>
        <p class="darker">Åbningstider</p>
        <p>Mandag-Fredag: 9-17</p>
    </div>
    <p>Lørdag-Søndag: Lukket</p>
</div>
<div class="line">
    <div class="line">
        <img src={email.src} alt="">
        <a href="mailto:kundeservice@cph.dk">kundeservice@cph.dk</a>
    </div>
    <div class="line">
        <img src={at.src} alt="">
        <a href="https://twitter.com/cphairports">@kundeservice</a>
    </div>
    <div class="line">
        <img src={phone.src} alt="">
        <a href="tel:+4561318424">+45 61 31 84 24</a></div>
</div>
</div>

<style>
    .contact-box {
        display: flex;
        flex-direction: column;
        gap: 18px;
        padding: 24px;
        box-shadow: rgba(0, 0, 0, 0.25) 0px 5px 13px;
        border-radius: 10px;
        width: max-content;

        @media (width<640px) {
            width: fit-content;
        }
    }
    .opening-hours {
        display: flex;
        align-items: end;
        gap: 16px;
        row-gap: 4px;

        & :first-child {
            align-self: center;

            @media (width<640px) {
                align-self: end;
            }
        }
        & > p:last-child {
            margin-left: 24px;
            @media (width<640px) {
                margin-left: 40px;
            }
        }

        @media (width<640px) {
            flex-wrap: wrap;
        }
    }
    .line {
         display: flex;
         gap:16px;
     }
     .line .line {
        gap: 4px;

        @media (width<640px) {
            gap: 16px;
        }
     }
     .line:has(.line) {
        @media (width<640px) {
            flex-direction: column;
        }
     }
     h3 {
         color: var(--cph-blue);
         font-size: var(--fs-4);
         font-weight: var(--fw-bold);
         line-height: var(--fs-4);
        }
        p, a {
            font-size: var(--fs-p);
            color: var(--grey-text);
        }
        .darker {
           color: black;
           font-weight: 500;
        }
</style>