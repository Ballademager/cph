---
const {cardTitle, cardText, href, cardImage} = Astro.props;
---

<a href={href} class="redirect-card">
    <img src={cardImage.src} alt="">
    <div class="card-content">
        <h3>{cardTitle}</h3>
        <p>{cardText}</p>
        <h4>GÃ¥ til <span>kundeservice/{cardTitle}</span></h4>
    </div>
</a>

<style>
    .redirect-card {
        max-width: 300px;
        box-shadow: rgba(0, 0, 0, 0.25) 2px 4px 13px;
        border-radius: 5px;
        overflow: hidden;

        @media (width<1024px) {
            max-width: 225px;
        }
    }
    .card-content {
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding: 8px 12px 16px;

        @media (width<1024px) {
            padding: 8px 12px 8px;
        }
    }
    h3 {
        color: var(--cph-blue);
        font-weight: var(--fw-semi-bold);
        font-size: var(--fs-5);

        @media (width<1024px) {
            font-size: var(--fs-6);
        }
    }
    p {
        font-size: var(--fs-small);

        @media (width<1024px) {
            font-size: var(--fs-smaller);
        }
    }
    h4 {
        margin-top: 12px;
        font-weight: var(--fw-medium);
        color: var(--grey-text);
        font-size: var(--fs-p);
        font-style: italic;

        @media (width<1024px) {
            font-size: var(--fs-small);
        }
    }
    span {
        color: var(--light-blue);
        font-weight: var(--fw-semi-bold);
        text-transform: lowercase;
    }
    img {
        max-width: 300px;
        height: 200px;
        object-fit: cover;

        @media (width<1024px) {
            max-width: 100%;
            max-height: 150px;
        }
    }
</style>