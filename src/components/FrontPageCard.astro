---
const { cardIcon, cardTitle, cardDescription, targetLocation } = Astro.props;
import logo from "../images/logo.webp";
---

<a href={targetLocation}>
  <div
    class="flex flex-col shadow-card py-4 md:py-8 px-4 md:px-10 justify-center items-center rounded-xl gap-1 h-full"
  >
    <!-- Temporary src logo until we import all logos needed -->
    <img src={logo.src} width={50} height={50} />
    <p class="font-bold mt-2 md:text-large">{cardTitle}</p>
    <p class="text-small lg:px-8 text-center md:text-p">{cardDescription}</p>
  </div>
</a>
